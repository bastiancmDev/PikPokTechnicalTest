<UserControl x:Class="Testing.FigthActionsPanel"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:Name="Root">
    <Grid Height="200" Width="600">
        <Border Background="#FF2E2E2F" >
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">

                <Border Height="150" Width="150" Margin="10" Background="#FF1D1C1C" MouseUp="AttackEnemy">
                    <TextBlock Text="Attack" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                </Border>

                <Border Height="150" Width="150" Margin="10" Background="#FF1D1C1C">
                    <TextBlock Text="Attack" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                </Border>

                <Border Height="150" Width="150" Margin="10" Background="#FF1D1C1C">
                    <TextBlock Text="Attack" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>